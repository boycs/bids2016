<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/li_row_comments"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_default"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_default" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_default"
        android:paddingLeft="@dimen/padding_default"
        android:paddingTop="@dimen/padding_default" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/img_icon_likecomment"
                android:layout_height="@dimen/img_icon_likecomment"
                android:background="@drawable/icon_username" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:orientation="vertical"
            android:paddingLeft="3dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.app.custom.CustomTextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.95"
                    android:text="user"
                    android:textColor="@color/c_blue"
                    android:textSize="@dimen/f_description" />

                <com.app.custom.CustomTextView
                    android:id="@+id/tv_comment_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_content2"
                    android:textSize="@dimen/f_small" />
            </LinearLayout>

            <com.app.custom.CustomTextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="des"
                android:textColor="@color/c_content"
                android:textSize="@dimen/f_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:id="@+id/li_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/padding_big" >

                    <ImageView
                        android:id="@+id/img_agree"
                        android:layout_width="@dimen/img_icon_news"
                        android:layout_height="@dimen/img_icon_news"
                        android:background="@drawable/icon_agree" />

                    <com.app.custom.CustomTextView
                        android:id="@+id/tv_agree_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_default"
                        android:paddingRight="@dimen/padding_big"
                        android:textColor="@color/c_content"
                        android:textSize="@dimen/f_note" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/li_disagree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/padding_big" >

                    <ImageView
                        android:id="@+id/img_disagree"
                        android:layout_width="@dimen/img_icon_news"
                        android:layout_height="@dimen/img_icon_news"
                        android:background="@drawable/icon_uagree" />

                    <com.app.custom.CustomTextView
                        android:id="@+id/tv_disagree_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding_default"
                        android:paddingRight="@dimen/padding_big"
                        android:textColor="@color/c_content"
                        android:textSize="@dimen/f_note" />
                </LinearLayout>

                <com.app.custom.CustomTextView
                    android:id="@+id/tv_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_default"
                    android:paddingRight="@dimen/padding_big"
                    android:text="Reply"
                    android:textColor="@color/c_content"
                    android:textSize="@dimen/f_note" />

                <com.app.custom.CustomTextView
                    android:id="@+id/tv_reply_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.95"
                    android:paddingLeft="@dimen/padding_default"
                    android:paddingRight="@dimen/padding_big"
                    android:textColor="@color/c_content"
                    android:textSize="@dimen/f_note" />

                <com.app.custom.CustomTextView
                    android:id="@+id/tv_comment_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:textColor="@color/c_content"
                    android:textSize="@dimen/f_normalmor"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_reply_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>
                android:layout_marginLeft="@dimen/padding_default"
                android:layout_marginRight="@dimen/padding_default"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <com.app.custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Current Price  "
                        android:textColor="@color/c_title"
                        android:textSize="@dimen/f_small" />

                    <com.app.custom.CustomTextView
                        android:id="@+id/tv_current_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_default"
                        android:layout_marginRight="@dimen/padding_default"
                        android:text="-"
                        android:textColor="@color/c_title"
                        android:textSize="@dimen/f_normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_wh"
                    android:layout_weight="0.95"
                    android:background="@color/c_title" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_drag_drop_sl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setalert_drag_h"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_default2"
                    android:gravity="center_vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/padding_row"
                        android:paddingRight="@dimen/padding_row" >

                        <ImageView
                            android:layout_width="@dimen/stoploss_w2"
                            android:layout_height="match_parent"
                            android:background="@drawable/img_bidshit_stoploss"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_down_sl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_default" >

                        <ImageView
                            android:id="@+id/img_down_sl"
                            android:layout_width="@dimen/setalert_updown"
                            android:layout_height="@dimen/setalert_updown"
                            android:src="@drawable/icon_native" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.95"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_default"
                        android:weightSum="3" >

                        <com.app.custom.CustomTextView
                            android:id="@+id/tv_symbol_sl"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/c_content"
                            android:textSize="@dimen/f_normalmor"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >

                            <com.app.custom.CustomTextView
                                android:id="@+id/tv_last_trade_sl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ddddd"
                                android:textColor="@color/c_warning"
                                android:textSize="@dimen/f_normalmor"
                                android:textStyle="bold" />

                            <com.app.custom.CustomTextView
                                android:id="@+id/tv_percent_sl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ddddd"
                                android:textColor="@color/c_warning"
                                android:textSize="@dimen/f_description" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_up_sl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_default" >

                        <ImageView
                            android:id="@+id/img_up_sl"
                            android:layout_width="@dimen/setalert_updown"
                            android:layout_height="@dimen/setalert_updown"
                            android:src="@drawable/icon_check" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <com.app.custom.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/padding_default"
                            android:padding="@dimen/padding_default2"
                            android:text="+SL"
                            android:textColor="@android:color/transparent"
                            android:textSize="@dimen/f_description"
                            android:textStyle="bold" />

                        <com.app.custom.CustomTextView
                            android:id="@+id/tv_drag_add_sl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_setalert_add_warning"
                            android:text="+SL"
                            android:textColor="@color/c_content"
                            android:textSize="@dimen/f_description"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/li_drag_drop_tp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setalert_drag_h"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_default2"
                    android:gravity="center_vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/padding_row"
                        android:paddingRight="@dimen/padding_row" >

                        <ImageView
                            android:layout_width="@dimen/stoploss_w2"
                            android:layout_height="match_parent"
                            android:background="@drawable/img_bidshit_targetprice"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_down_tp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_default" >

                        <ImageView
                            android:id="@+id/img_down_tp"
                            android:layout_width="@dimen/setalert_updown"
                            android:layout_height="@dimen/setalert_updown"
                            android:src="@drawable/icon_native" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.95"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_default"
                        android:weightSum="3" >

                        <com.app.custom.CustomTextView
                            android:id="@+id/tv_symbol_tp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/c_content"
                            android:textSize="@dimen/f_normalmor"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >

                            <com.app.custom.CustomTextView
                                android:id="@+id/tv_last_trade_tp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ddddd"
                                android:textColor="@color/c_warning"
                                android:textSize="@dimen/f_normalmor"
                                android:textStyle="bold" />

                            <com.app.custom.CustomTextView
                                android:id="@+id/tv_percent_tp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ddddd"
                                android:textColor="@color/c_warning"
                                android:textSize="@dimen/f_description" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/li_up_tp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_default" >

                        <ImageView
                            android:id="@+id/img_up_tp"
                            android:layout_width="@dimen/setalert_updown"
                            android:layout_height="@dimen/setalert_updown"
                            android:src="@drawable/icon_check" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <com.app.custom.CustomTextView
                            android:id="@+id/tv_drag_add_tp_sl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/padding_default"
                            android:background="@drawable/bg_setalert_add_border"
                            android:text="+SL"
                            android:textColor="@color/c_content"
                            android:textSize="@dimen/f_description"
                            android:textStyle="bold" />

                        <com.app.custom.CustomTextView
                            android:id="@+id/tv_drag_add_tp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_setalert_add_warning"

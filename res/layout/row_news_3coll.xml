<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_new_h"
        android:paddingLeft="@dimen/padding_row"
        android:paddingRight="@dimen/padding_row"
        android:paddingTop="@dimen/padding_row"
        android:weightSum="3" >

        <LinearLayout
            android:id="@+id/li_coll_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_index_news"
            android:gravity="center|center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/li_content_coll_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.95"
                android:gravity="bottom"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_index_new_bottom"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_row" >

                    <com.app.custom.CustomTextView
                        android:id="@+id/tv_symbol_coll_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_article_keyword"
                        android:textColor="@color/c_content"
                        android:textSize="@dimen/f_small" />

                    <com.app.custom.CustomTextView
                        android:id="@+id/tv_article_title_coll_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="@color/c_content"
                        android:textSize="@dimen/f_small" />

                    <com.app.custom.CustomTextView
                        android:id="@+id/tv_created_at_coll_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/c_title"
                        android:textSize="@dimen/f_small" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/padding_row"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/li_coll_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_index_news"
            android:gravity="center|center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/li_content_coll_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_new_h"
                android:layout_weight="0.95"
                android:gravity="bottom"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_index_new_bottom"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_row" >

                    <com.app.custom.CustomTextView
                        android:id="@+id/tv_symbol_coll_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_article_keyword"
                        android:textColor="@color/c_content"
                        android:textSize="@dimen/f_small" />

                    <com.app.custom.CustomTextView
                        android:id="@+id/tv_article_title_coll_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="@color/c_content"
                        android:textSize="@dimen/f_small" />

                    <com.app.custom.CustomTextView
                        android:id="@+id/tv_created_at_coll_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/c_title"
                        android:textSize="@dimen/f_small" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="@dimen/padding_row"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/li_coll_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_index_news"
            android:gravity="center|center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/li_content_coll_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/row_new_h"
                android:layout_weight="0.95"
                android:gravity="bottom"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_index_new_bottom"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_row" >

                    <com.app.custom.CustomTextView
                        android:id="@+id/tv_symbol_coll_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_article_keyword"
                        android:textColor="@color/c_content"
                        android:textSize="@dimen/f_small" />

                    <com.app.custom.CustomTextView
                        android:id="@+id/tv_article_title_coll_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="@color/c_content"
                        android:textSize="@dimen/f_small" />

                    <com.app.custom.CustomTextView
                        android:id="@+id/tv_created_at_coll_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/c_title"
                        android:textSize="@dimen/f_small" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_default2"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_big"
    tools:context="com.app.bids.PagerSystemTradeCdc" >

    <LinearLayout
        android:id="@+id/li_signal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <com.app.custom.CustomTextView
            android:id="@+id/tv_signal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Signal"
            android:textColor="@color/c_content"
            android:textSize="@dimen/f_description" />

        <com.app.custom.CustomTextView
            android:id="@+id/tv_buysel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Buy Signal"
            android:textColor="@color/c_content"
            android:textSize="@dimen/f_description" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/li_buysel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="@dimen/padding_default"
        android:weightSum="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ToggleButton
                android:id="@+id/toggle_buysell"
                android:layout_width="@dimen/toggle_w"
                android:layout_height="@dimen/toggle_h"
                android:background="@drawable/bg_toggle"
                android:button="@null"
                android:checked="true"
                android:text=""
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <com.app.custom.CustomTextView
                android:id="@+id/tv_count"
                android:layout_width="@dimen/count_sign"
                android:layout_height="@dimen/count_sign"
                android:background="@drawable/icon_count_buy"
                android:gravity="center"
                android:text="44"
                android:textColor="@color/c_content"
                android:textSize="@dimen/f_description" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/view_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_default" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3" >

                    <com.app.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding_default"
                        android:singleLine="true"
                        android:text="Symbol"
                        android:textColor="@color/c_title"
                        android:textSize="@dimen/f_watchlist_detail" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_wh"
                    android:background="@color/c_line" />

                <LinearLayout
                    android:id="@+id/list_symbol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/col_title_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/padding_default" >

                        <View
                            android:layout_width="@dimen/img_updown"
                            android:layout_height="match_parent"
                            android:visibility="gone" />

                        <com.app.custom.CustomTextView
                            android:layout_width="@dimen/watchlist_detail_col_grahp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Trend"
                            android:textColor="@color/c_title"
                            android:textSize="@dimen/f_watchlist_detail" />

                        <com.app.custom.CustomTextView
                            android:layout_width="@dimen/watchlist_detail_col"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Last Trade"
                            android:textColor="@color/c_title"
                            android:textSize="@dimen/f_watchlist_detail" />

                        <com.app.custom.CustomTextView
                            android:layout_width="@dimen/watchlist_detail_col"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Change"
                            android:textColor="@color/c_title"
                            android:textSize="@dimen/f_watchlist_detail" />

                        <com.app.custom.CustomTextView
                            android:layout_width="@dimen/watchlist_detail_col"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Volume"
                            android:textColor="@color/c_title"
                            android:textSize="@dimen/f_watchlist_detail" />

                        <com.app.custom.CustomTextView
                            android:layout_width="@dimen/watchlist_detail_col"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Value"
                            android:textColor="@color/c_title"
                            android:textSize="@dimen/f_watchlist_detail" />

                        <com.app.custom.CustomTextView
                            android:layout_width="@dimen/watchlist_detail_col"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="High"
                            android:textColor="@color/c_title"
                            android:textSize="@dimen/f_watchlist_detail" />

                        <com.app.custom.CustomTextView
                            android:layout_width="@dimen/watchlist_detail_col"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Low"
                            android:textColor="@color/c_title"
                            android:textSize="@dimen/f_watchlist_detail" />

                        <com.app.custom.CustomTextView
                            android:layout_width="@dimen/watchlist_detail_col"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Ceil"
                            android:textColor="@color/c_title"
                            android:textSize="@dimen/f_watchlist_detail" />

                        <com.app.custom.CustomTextView
                            android:layout_width="@dimen/watchlist_detail_col"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Floor"
                            android:textColor="@color/c_title"
                            android:textSize="@dimen/f_watchlist_detail" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_wh"
                        android:background="@color/c_line" />

                    <LinearLayout
                        android:id="@+id/list_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
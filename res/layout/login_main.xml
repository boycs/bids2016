<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_default"
    android:orientation="vertical"
    android:padding="@dimen/padding_login" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding_big" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/logo_h"
                    android:src="@drawable/icon_profile_bids" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_login"
                android:background="@drawable/bg_input_register2"
                android:drawableLeft="@drawable/icon_username"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="  username"
                android:paddingLeft="@dimen/padding_default"
                android:textColor="@color/c_content"
                android:textColorHint="@color/c_title"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textSize="@dimen/f_normal" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_big" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_input_register2"
                android:drawableLeft="@drawable/icon_password"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="  password"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/padding_default"
                android:textColor="@color/c_content"
                android:textColorHint="@color/c_title"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textSize="@dimen/f_normal" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_default" />

            <CheckBox
                android:id="@+id/cb_remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/c_title"
                android:text="Remember Me"
                android:textColor="@color/c_content" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_big" />

            <Button
                android:id="@+id/bt_login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_register"
                android:padding="@dimen/padding_big"
                android:text="SIGN IN"
                android:textSize="@dimen/f_normal" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_big" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_big"
                android:weightSum="1" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/line_wh"
                    android:layout_weight="0.45"
                    android:background="@color/c_line" />

                <com.app.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" OR SIGN IN WITH "
                    android:textColor="@color/c_title"
                    android:textSize="@dimen/f_description" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/line_wh"
                    android:layout_weight="0.45"
                    android:background="@color/c_line" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_big" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/facebook_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_long_facebook" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_default" />

                <ImageView
                    android:id="@+id/twitter_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_long_twiter"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_default" />

                <ImageView
                    android:id="@+id/plus_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_long_googleplus"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_big"
                android:paddingTop="@dimen/padding_big"
                android:visibility="gone"
                android:weightSum="1" >

                <ImageView
                    android:id="@+id/facebook_icon2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_facebook" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <ImageView
                    android:id="@+id/twitter_icon2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_twitter" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15" />

                <ImageView
                    android:id="@+id/plus_icon2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_googleplus" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_big" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_big"
                android:paddingTop="@dimen/padding_big" >

                <com.app.custom.CustomTextView
                    android:id="@+id/tv_forget_pss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Forgot password?"
                    android:textColor="@color/c_title"
                    android:textSize="@dimen/f_normal" />

                <com.app.custom.CustomTextView
                    android:id="@+id/tv_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:text="New user? Sign Up"
                    android:textColor="@color/c_title"
                    android:textSize="@dimen/f_normal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
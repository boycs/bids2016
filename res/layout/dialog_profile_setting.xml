                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="7" >

                    <com.app.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="Someone replied to your comment"
                        android:textColor="@color/c_content"
                        android:textSize="@dimen/f_small" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_default" >

                        <CheckBox
                            android:id="@+id/ck_reply_your_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_checkbox"
                            android:checked="true"
                            android:visibility="gone" />

                        <ToggleButton
                            android:id="@+id/tg_reply_your_comment"
                            android:layout_width="@dimen/toggle_w"
                            android:layout_height="@dimen/toggle_h"
                            android:background="@drawable/bg_toggle_profile"
                            android:button="@null"
                            android:checked="true"
                            android:text=""
                            android:textOff=""
                            android:textOn="" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_wh"
                    android:background="@color/c_line" />

                <LinearLayout
                    android:id="@+id/li_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="7" >

                    <com.app.custom.CustomTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:text="Someone you follow published new idea"
                        android:textColor="@color/c_content"
                        android:textSize="@dimen/f_small" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_default" >

                        <CheckBox
                            android:id="@+id/ck_you_follow_published_new_idea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_checkbox"
                            android:checked="true"
                            android:visibility="gone" />

                        <ToggleButton
                            android:id="@+id/tg_you_follow_published_new_idea"
                            android:layout_width="@dimen/toggle_w"
                            android:layout_height="@dimen/toggle_h"
                            android:background="@drawable/bg_toggle_profile"
                            android:button="@null"
                            android:checked="true"
                            android:text=""
                            android:textOff=""

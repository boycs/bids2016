<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_row" >

    <LinearLayout
        android:id="@+id/row_symbol"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_symboldetail_h"
        android:weightSum="4" >

        <com.app.custom.CustomTextView
            android:id="@+id/tv_seq"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/c_title"
            android:textSize="@dimen/f_description" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="@dimen/icon_mutualfund_wh"
                android:layout_height="@dimen/icon_mutualfund_wh"
                android:scaleType="fitXY"
                android:src="@drawable/bg_circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_default" >

            <com.app.custom.CustomTextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/c_content"
                android:textSize="@dimen/f_description" />

            <com.app.custom.CustomTextView
                android:id="@+id/tv_name_t"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:textColor="@color/c_title"
                android:textSize="@dimen/f_note" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_wh"
        android:background="@color/c_line" />

</LinearLayout>
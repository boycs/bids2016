<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="right"
    android:orientation="vertical"
    android:padding="@dimen/padding_default" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_condition"
        android:padding="@dimen/padding_default" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3" >

            <com.app.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text="Condition"
                android:textColor="@color/c_title"
                android:textSize="@dimen/f_description" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_wh"
                android:background="@color/c_line" />

            <com.app.custom.CustomTextView
                android:id="@+id/tv_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/padding_row"
                android:singleLine="true"
                android:tag="&lt;"
                android:text="&lt;"
                android:textColor="@color/c_title"
                android:textSize="@dimen/f_title" />

            <com.app.custom.CustomTextView
                android:id="@+id/tv_tantamount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/padding_row"
                android:singleLine="true"
                android:tag="="
                android:text="="
                android:textColor="@color/c_title"
                android:textSize="@dimen/f_title" />

            <com.app.custom.CustomTextView
                android:id="@+id/tv_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/padding_row"
                android:singleLine="true"
                android:tag="&lt;"
                android:text=">"
                android:textColor="@color/c_title"
                android:textSize="@dimen/f_title" />

            <com.app.custom.CustomTextView
                android:id="@+id/tv_cancle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/padding_row"
                android:singleLine="true"
                android:text="Cancle"
                android:textColor="@color/c_title"
                android:textSize="@dimen/f_description" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
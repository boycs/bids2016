<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_big"
    android:paddingRight="@dimen/padding_default" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_default2"
            android:paddingLeft="@dimen/padding_row"
            android:paddingRight="@dimen/padding_row"
            android:paddingTop="@dimen/padding_default2" >

            <ImageView
                android:id="@+id/img_stoploss"
                android:layout_width="@dimen/stoploss_w"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.95"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="5" >

            <com.app.custom.CustomTextView
                android:id="@+id/tv_symbol"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/c_content"
                android:textSize="@dimen/f_setalert_row" />

            <com.app.custom.CustomTextView
                android:id="@+id/tv_price1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/c_success"
                android:textSize="@dimen/f_setalert_row" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.95"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_row" >

                    <com.app.custom.CustomTextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="@color/c_title"
                        android:textSize="@dimen/f_small" />

                    <com.app.custom.CustomTextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:singleLine="true"
                        android:textColor="@color/c_content"
                        android:textSize="@dimen/f_small" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_type"
                    android:layout_width="@dimen/setalert_status"
                    android:layout_height="@dimen/setalert_status"
                    android:background="@drawable/icon_alert_default" />
            </LinearLayout>

            <com.app.custom.CustomTextView
                android:id="@+id/tv_running"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="Running"
                android:textColor="@color/c_blue"
                android:textSize="@dimen/f_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_default" >

            <ImageView
                android:id="@+id/img_manage"
                android:layout_width="10dp"
                android:layout_height="26dp"
                android:background="@drawable/icon_setting" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_wh"
        android:background="@color/c_line" />

</LinearLayout>